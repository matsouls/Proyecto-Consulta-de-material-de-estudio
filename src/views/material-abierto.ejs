<body>
    
    <header>
        <div class="header-content">
            <div class="logo" onclick="location.href='/home'";>
                <h1>Apoyo<b>UNAB</b></h1>
                
            </div>

            <div class="menu">

                <nav>
                    <ul>
                        <li><a href="/home"><i class="fas fa-home"></i>  Inicio</a></li>
                        <li class="menu-selected"><a href="/logout">Cerrar Sesion</a></li>
                    </ul>
                </nav>

            </div>
        </div>

    </header>



<div  id=container_T class="container">
    <div id=c_titulo class="card-header d-flex justify-content-between align-items-center">
        <h1><%= material.titulo_material %></h1> <b>Autor:<%= material.autor %></b>
    </div>
    <div id=texto class="card-body">
        <p><%= material.texto_material %></p>
    </div>
</div>

<div id=likes class="container d-flex justify-content-between align-items-center" >
    <button class="bt btn-success" id="btn-like" data-id=<%= material.id %> >
        <i class="fas fa-thumbs-up"></i> Like

    </button>
    <p>&#128077:
        <span class="likes-count"><%= material.likes %></span>
        <i class="fas fa-heart"></i>
    </p>

    <p>
        <i class="bi bi-eye-fill mt-4"></i>&#128065:<%= material.views %>
    </p>


</div>

<div id=comentarios class="container  mt-2 bg-dark text-white">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title">Comentarios</h3>
      <button class="btn btn-info" id="btn-toggle-comment">
        <i class="fa fa-comments-o"></i> Publicar Comentario
      </button>
    </div>
    <div  id=cont_comment class="card-body">
        <blockquote id="post-comment">
            <form action="/material-abierto/<%= material.id %>/comentario" method="POST">
                <div id=input_usuario class="form-group">
                    <input type="text" class="form-control" readonly=»readonly» name="name" value=<%= nombre_user %>>

                </div>
                <div class="form-group mt-2">
                   <textarea id=texto_coment name="comentario" rows="10" class="form-control" placeholder="Escriba su Comentario"></textarea>

                </div>

                <div class="form-group">
                    <button class="btn btn-outline-success" id="btn-comment">
                      <i class="fa fa-comment"></i> Publicar
                    </button>
                  </div>

            </form>
        </blockquote>
        <ul class="list-group p-4">
            <% comment.forEach(function(comment){ %>
                <li class="list-group-item">
                    <div class="row">
                        <a href="#" class="col text-center">
                            <!--aqui iria un icono-->
                        </a>
                        <blockquote>
                            <p class="lead"><%= comment.comentario %></p>
                            <button class="bt btn-success" id="btn-likeM"  data-id=<%=material.id%> >
                                <i class="fas fa-thumbs-up"></i> Like
                                </button>
                                <p id="contadorlikeC">
                                    <span class="likes-count3" id="contadorlikeC" ><%= comment.likes %></span>
                                    <i class="fas fa-heart" id="contadorlikeC" ></i>
                                </p>
                            <footer class="blockquote-footer">
                                <b>Usuario: </b><%= comment.name %> <br> <b>Fecha: </b> <%= comment.timestamp %>
                            </footer>
                        </blockquote>
                    </div>
                </li>
                <% });%>

        </ul>
    </div>

    <script
    src="https://code.jquery.com/jquery-3.6.0.js"
    integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
    crossorigin="anonymous"></script>
