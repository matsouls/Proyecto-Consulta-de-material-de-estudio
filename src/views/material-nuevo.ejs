    <header>
        <div class="header-content">
            <div class="logo" onclick="location.href='/home'";>
                <h1>Apoyo<b>UNAB</b></h1>
            </div>

            <div class="menu">

                <nav>
                    <ul>
                        <li><a href="/home"><i class="fas fa-home"></i>  Inicio</a></li>
                        <li class="menu-selected"><a href="/logout">Cerrar Sesion</a></li>
                    </ul>
                </nav>

            </div>
        </header>

        <body>
         
              <div class="form-container">
                  <h1>Crear Material</h1>
                  <div class="alerta2">
                    <% if (Alerta.length > 0){ %>
                        <div id=mensaje class="alert alert-success" role="alert">
                            
                            <%= Alerta %>
                        </div>
                        <% } %>
                </div>
                  <form action="/material-nuevo" method="post">
                      <div class="control">
                        <label for="titulo_material">Titulo</label>
                        <input type="text" name="titulo_material" id=titulo_m placeholder="Titulo">
                      </div>
                      <div class="control">
                        <form action="">
                            <label for="categ_material">Categoria</label>
                            <select name="categ_material" id="categ_material" >
                                <option> </option>
                                <option>Informatica</option>
                                <option>Matematicas</option>
                            </select>

                        
                        
                      </div>
                      <div class="control">
                        <label for="texto_material">Descripcion</label>
                        <textarea name="texto_material" id="texto_material" rows="5" placeholder="Escriba su material"></textarea> 
                      </div>
                      <div class="control">
                        <input type="submit"  value="Crear Material">
                      </div>
                  </form>
              </div>
            
        </body>
       

