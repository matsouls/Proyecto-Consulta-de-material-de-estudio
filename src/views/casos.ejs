    <div class="card" style="width: 200rem;">
            <div class="card-header">
            
                
                    <div>          

                <div>
                    <% for(var i= 0 ; i < casos.length; i++){ %>
                        
                <ul class="list-group list-flush">
                </ul>
                <li  class="list-group-item"><a href="/caso-abierto/<%= casos[i].id %>" style="text-decoration:none"><%= casos[i].titulo_caso %></a></li>
               
                <% } %>
               
        </div>
    
    

    </div>
    <div class="row"> 
        <% if(pages) { %>
            <nav class="mx-auto">
                <ul class="pagination">
                    <!--PRIMERA PAGINA -->
                    <% if(current == 1) { %>
                        <li class="page-item disabled mt-4">
                            <a href="" class="page-link">Primera Pagina</a>

                        </li>
                        <% }else{ %> 
                            <li class="page-link mt-4">
                                <a href="/casos/1" class="page-link">Primera Pagina</a>
                            </li>
                            <% } %>  

                            <!--PAGINAS-->
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1 )%>

                    <% if(i !== 1) { %>
                        <a href="#" class="page-link mt-4">...</a>
                        <% } %>

                        <% for(; i <= (Number(current) + 4) && i <= pages ; i++) { %> 
                            <% if(i == current) { %>
                                 <li class="page-item mt-4"">
                                     <a href="<%= i %>" class="page-link"><%= i %></a>
                                     
                                 </li>
                                

                            <% }else{ %>
                                <li class="page-item mt-4"">
                                <a href="/casos/<%= i %>" class="page-link">
                                    <%= i %>
                                </a>
                                </li>
                                <% } %>

                                <% if(i == Number(current) + 4 && i <pages ) { %>
                                    <li class="page-item">
                                        <a href="#" class="page-link">...</a>

                                    </li>
                                    <% } %>
                                    <% } %>
                            <!--ULTIMA PAGINA-->
                            <% if(current == 1) { %>
                                <li class="page-item">
                                <a href="#" class="page-link">Ultima pagina</a>
                                </li>
                                <% }else{ %> 
                                    <li class="page-item">
                                        <a class="page-link" href="/casos/<%= pages %>"> Ultima Pagina</a>
                                    </li>
                                    <% } %>

                </ul>

            </nav>
            <% } %> 
